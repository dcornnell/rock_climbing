.container
	= form_for @new_user, url: users_path, method: :post do |f|
		Name:
		%br
		= f.text_field :name
		%br
		About:
		%br
		= f.text_area :about
		%br
		Email: (this will be used for log in)
		%br
		= f.email_field :contact
		%br
		Password
		%br
		= f.password_field :password
		%br
		Password Confirmation
		%br
		= f.password_field :password_confirmation
		%br
		Upload an image
		%br
		=f.file_field :user_photo
		%br
		=f.submit "Sign up"