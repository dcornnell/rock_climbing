.container
	%table.table-striped
		%th name
		%th grade
		%th score
		- @routes.each do |r|
			%tr
				%td
					-if r.name
						= link_to "#{r.name}", route_path(r)
					-else
						= link_to "no name", route_path(r) 
				%td		
					= grade_format(r.grade,r.modifier)
				%td
					=r.score

	=link_to "add a route", new_route_path
		





